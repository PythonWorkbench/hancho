  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Hancho",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/hancho.py",
      "cwd": "${workspaceFolder}/tutorial",
      "args": ["-f", "-j1", "tut00.hancho"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "preLaunchTask": "Wipe build",
    },
    {
      "name": "Hancho Test Suite",
      "type": "debugpy",
      "request": "launch",
      "program": "run_tests.py",
      "cwd": "${workspaceFolder}/tests",
      "args": ["TestHancho.test_header_changed"],
      "console": "integratedTerminal",
      "justMyCode": false,
    },
  ]
}
