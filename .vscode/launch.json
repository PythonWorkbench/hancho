  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: hancho.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/hancho.py",
      "args": ["--force", "-j1"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/examples/meson",
      "justMyCode": false,
    },
    {
      "name": "Test Tutorial Build",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/hancho.py",
      "args": [],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/tutorial",
      "justMyCode": false,
    },
    {
      "name": "Run a test case directly",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/hancho.py",
      "args": ["recursive_base_is_bad.hancho", "--force", "-j1"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/tests",
      "justMyCode": false,
    },
  ]
}
