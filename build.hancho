hancho.verbose = True

clean_build = hancho.extend(
  desc = "Build {command_path}",
  command = [
    "rm -rf build",
    "{root_path}/hancho.py --quiet"
  ]
)

clean_build.Task(command_path = "tutorial")

clean_build.Task(command_path = "examples/hello_world")

clean_build.Task(command_path = "examples/meson")

hancho.task(
  desc = "Run all tests",
  command_path = "tests",
  command = [
    "rm -rf build",
    "./run_tests.py > /dev/null"
  ]
)
