from hancho import *
import glob

this_path = Path(__file__).parent

build_config.set_defaults(
  command_path = this_path,
  source_path  = this_path,
  build_path   = this_path / "build",
)

rules = load("../rules.hancho", build_config)

rules.c_binary(glob.glob("*.cpp"), "app")
