# tutorial/tut12.hancho
import hancho

common = hancho.Config(
  command_path  = ".",
  command_files = [],
  build_path    = "build/tut12",
)

compile = hancho.Config(
  common,
  desc        = "Compile {source_files}",
  command     = "g++ -MMD -c {source_files} -o {build_path}/{build_files}",
  build_files = "{swap_ext(source_files, '.o')}",
  build_deps  = "{swap_ext(source_files, '.d')}",
)

main_o = hancho.Task(
  compile,
  source_files = "src/main.cpp",
)

util_o = hancho.Task(
  compile,
  source_files = "src/util.cpp",
)

link = hancho.Config(
  common,
  desc    = "Link {source_files} into {build_files}",
  command = "g++ {source_files} -o {build_path}/{build_files}",
)

app = hancho.Task(
  link,
  source_files = [main_o, util_o],
  build_files  = "app",
)
