from hancho import *

build_config.defaults(
  command_path = Path.cwd(),
  source_path  = Path.cwd(),
  build_path   = Path.cwd() / "build",
)

rule1 = build_config.rule(
  command = "touch {rel_build_files}"
)

def callback(task):
  rule1([], "dummy.txt")
  return []

rule2 = build_config.rule(
  command = callback
)

rule2([], [])
