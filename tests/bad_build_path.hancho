import hancho

rule = hancho.Command(
  command = [
    "echo {rel_source_files}",
    "touch {rel_build_files}",
  ]
)

# Good build_path
rule(
  "src/foo.c",
  "foo1.o",
  build_path = "{file_path}/build"
)

# Bad build_path
rule(
  "src/foo.c",
  "foo2.o",
  build_path = "{file_path}/../build"
)
