from hancho import *

build_config.defaults(
  command_path = Path.cwd(),
  source_path  = Path.cwd(),
  build_path   = Path.cwd() / "build",
)

multiple_commands = build_config.rule(
  command = [
    "echo foo > {rel_build_files[0]}",
    "echo bar > {rel_build_files[1]}",
    "echo baz > {rel_build_files[2]}"
  ]
)

multiple_commands(__file__, ["foo.txt", "bar.txt", "baz.txt"])
